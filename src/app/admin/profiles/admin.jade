div.content(ng-controller="AdminController as model")
    .row.content
        button.col-sm-2.btn.btn-lg.btn-primary(ng-click="model.add()") Add Admin
    form.content.col-sm-4
        input.form-control(type="text" placeholder="Search" ng-model="model.searchTerm")
    table.table.table-striped.table-bordered
        thead
            th S/N
            th Name
            th Username
            th Actions
        tbody
            tr(ng-repeat="(key,admin) in model.admins | orderBy: '+name' | filter: model.searchTerm")
                td {{key + 1}}
                td {{admin.name}}
                td {{admin.username}}
                td
                    button.btn.btn-warning(ng-click="model.edit(admin.id)") Edit
                    button.btn.btn-danger(ng-click="model.remove(admin.id)") Delete
