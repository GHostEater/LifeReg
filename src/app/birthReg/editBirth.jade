.modal-header
    h3.modal-title Edit Birth
.modal-body
    form(name="model.form").form-horizontal
        .form-group
            label.control-label.col-sm-2 Surname
            .col-sm-10
                input.form-control(type="text" name="last_name" required ng-model="model.birth.last_name")
        .form-group
            label.control-label.col-sm-2 Other Names
            .col-sm-10
                input.form-control(type="text" name="first_name" required ng-model="model.birth.first_name")
        .form-group
            label.control-label.col-sm-2 Sex
            .col-sm-10
                select.form-control(name="sex" required ng-model="model.birth.sex")
                    option(value="Male") Male
                    option(value="Female") Female
        .form-group
            label.control-label.col-sm-2 Hair Colour
            .col-sm-10
                input.form-control(type="text" name="hair_colour" required ng-model="model.birth.hair_colour")
        .form-group
            label.control-label.col-sm-2 Complexion
            .col-sm-10
                input.form-control(type="text" name="complexion" required ng-model="model.birth.complexion")
        .form-group
            label.control-label.col-sm-2 Date of Birth
            .col-sm-10
                input.form-control(type="text" placeholder="yyyy-mm-dd" name="date_birth" required ng-model="model.birth.date_birth")
        .form-group
            label.control-label.col-sm-2 Time of Birth
            .col-sm-10
                input.form-control(type="text" placeholder="hh:mm:ss" name="time_birth" required ng-model="model.birth.time_birth")
        .form-group
            label.control-label.col-sm-2 Father's Name
            .col-sm-10
                input.form-control(type="text" name="father_name" required ng-model="model.birth.father_name")
        .form-group
            label.control-label.col-sm-2 Father's Address
            .col-sm-10
                input.form-control(type="text" name="father_address" required ng-model="model.birth.father_address")
        .form-group
            label.control-label.col-sm-2 Mother's Name
            .col-sm-10
                input.form-control(type="text" name="mother_name" required ng-model="model.birth.mother_name")
        .form-group
            label.control-label.col-sm-2 Mother's Address
            .col-sm-10
                input.form-control(type="text" name="mother_address" required ng-model="model.birth.mother_address")
        .form-group
            label.control-label.col-sm-2 Hospital
            .col-sm-10
                select.form-control(name="hospital" required ng-model="model.birth.hospital_id")
                    option(value="") -Select-
                    option(ng-repeat="hospital in model.hospitals" value="{{hospital.id}}") {{hospital.name}}
.modal-footer
    button.btn.btn-primary(ng-click="model.ok()") Confirm
    button.btn.btn-default(ng-click="$dismiss()") Cancel
